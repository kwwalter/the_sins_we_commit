<h1>Welcome, sinner!</h1>

<h3>Please sign <b>up</b> to lift your burdens...</h3>

<form action="<%= users_path %>" method="POST">

  <!-- in order to do DELETE, have to do the following..
    <input type="hidden" name="_method" value="DELETE">  -->

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="email" name="user[email]" placeholder="your email address">
  <input type="password" name="user[password]" placeholder="your desired pw">
  <input type="submit" value="Sign up!">
</form>

<h3>Please sign <b>in</b> to lift your burdens...</h3>

<form action="<%= session_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="email" name="user[email]" placeholder="your email address">
  <input type="password" name="user[password]" placeholder="your desired pw">
  <input type="submit" value="Sign in!">
</form>
